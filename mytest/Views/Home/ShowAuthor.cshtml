@model IEnumerable<mytest.Models.Book>

    @{
        ViewData["Title"] = "ShowAuthor";
    }

<br />

<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <div class="form-group">
                <br />
                @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                {
                    @Html.TextBox("search", null, new { @class = "form-control", @placeholder = "Book Name, Author, Genre or ISBN" })
                }
            </div>
        </div>

    </div>
</div>

<br />

    <div class="row" height="220">
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <div class="col-lg-5 col-md-5 col-sm-4 col-xs-5">
                    <div class="hvr-shrink">
                        <img src="@item.Author">

                    </div>
                </div>
                                <div class="right">
                                    <h5>
                                        <font size="12">
                                            @item.Author
                                        </font>
                                    </h5>
                                </div>
                                <div class="right">
                                    <h6>
                                        <font size="4">
                                            @item.Author<br />
                                        </font>
                                    </h6>
                                </div>
            }
        }
    </div>
